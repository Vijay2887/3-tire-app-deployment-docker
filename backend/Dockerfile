# USE A BASE IMAGE
FROM node:18-alpine

#SETUP A WORKDIR
WORKDIR /app

# COPY PACKAGE.JSON AND PACKAGE-LOCK.JSON
COPY package*.json /app/

# INSTALL THE DEPENDENCIES
RUN npm install

# COPY REST OF THE APPLICATIONS
COPY . .

# EXPOSE THE DEFAULT PORT OF EXPRESS JS 
EXPOSE 3000

# SET UP CMD TO RUN THE CONTAINER
CMD ["npm", "run", "start"]
